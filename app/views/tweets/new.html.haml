.new-contents
  .one-new-tweets
    = form_for @tweet do |f|
      %h3 掲載する
      .new-form
        = f.label :店名,class:"new-text"
        = f.text_field :name,placeholder:"10文字以内",class:"new-link"
      .new-form
        = f.label :紹介文,class:"new-label"
        = f.text_field :text,placeholder:"20文字以内",class:"new-links"
      .new-form
        = f.label :動画,class:"new_video"
        = f.file_field :video
      .new-form
        = f.label :画像,class:"new_video"
        = f.file_field :image
      .actions-new
        = f.submit "SENT",class:"new-btn"
