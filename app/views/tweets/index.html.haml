.contents.row
  - @tweets.each do |tweet|
    .more
      .more_list
        = video_tag tweet.video_url.to_s,loop: true, controls: true, width: 500, id: "mv" if tweet.video.present?
        = image_tag tweet.image.url,loop: true, controls: true, width: 400, id: "img" if tweet.image.present?

        = simple_format(tweet.text)
        %span.name
          %a{href:user_path(tweet.user.id)}
            %span 投稿者
            = tweet.user.nickname

        = link_to '詳細', "/tweets/#{tweet.id}", method: :get
      - if user_signed_in? && current_user.id == tweet.user_id
        = link_to '編集', "/tweets/#{tweet.id}/edit", method: :get
        = link_to '削除', "/tweets/#{tweet.id}", method: :delete
        

　
