.show-contents
  %p
    = @nickname
    さんの投稿一覧
  - @tweets.each do |tweet|
    = simple_format(tweet.name)
    = simple_format(tweet.text)
    .user-show-page
      = video_tag tweet.video_url.to_s,loop: true, controls: true, width: 500, id: "mv" if tweet.video.present?
      = image_tag tweet.image.url,loop: true, controls: true, width: 300, id: "img" if tweet.image.present?
      
    .form_tag
      - if user_signed_in? && current_user.id == tweet.user.id
        .edit_link
          = link_to '編集', "/tweets/#{tweet.id}/edit", method: :get,class:"show-btn"
        .delete_link
          = link_to '削除', "/tweets/#{tweet.id}", method: :delete,class:"show-btn"
      .show_link
        = link_to "詳細", "/tweets/#{tweet.id}", method: :get,class:"show-btn"
